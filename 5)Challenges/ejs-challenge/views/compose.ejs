<%- include("partials/header"); -%>

<h1>Compose</h1>
<form method="post" action="/compose">
    <div class="form-group">
        <label>Title:</label>
        <input name="postTitle"  class="form-control" type="text" width="100">    
    </div>

    <div class="form-group">
        <label>Post:</label>
        <textarea name="postBody" class="form-control" cols="100" rows="5"></textarea>
        <!-- <input name="content" type="text"><br> <br> -->
    </div>
    <button name="button" type="submit" class="btn btn-primary">Publish</button>
</form>

